<Window x:Class="ESMART.Presentation.Forms.FrontDesk.Booking.AddBookingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ESMART.Presentation.Forms.FrontDesk.Booking"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Title="Add Booking" Height="520" Width="320" Icon="/Forms/FrontDesk/Booking/logo.png">
    <Grid>
        <StackPanel Grid.Column="0" Margin="20">
            <TextBlock Text="Booking Information" FontSize="25" FontWeight="Bold" Margin="0,10" />
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="1" Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,2,0">
                            <TextBlock Text="Room Number:" FontWeight="Bold" />
                            <ComboBox x:Name="txtRoomNumber" Padding="2,5,0,5" />
                        </StackPanel>

                        <Grid Grid.Column="1" Margin="2,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Amount:" FontWeight="Bold" />
                                <TextBox x:Name="txtRoomRate" PreviewTextInput="DecimalInput_PreviewTextInput" TextChanged="DecimalInput_TextChanged" PreviewKeyDown="DecimalInput_PreviewKeyDown" IsEnabled="False" Padding="2,5,0,5" />
                            </StackPanel>

                            <Image Cursor="Hand" x:Name="EditButton" Grid.Column="1" Source="/Forms/RoomSetting/Room/editing.png" Width="20" Height="20" Margin="2,14,0,0" ToolTipService.ToolTip="Room rate is set to room type rate by default. You can change it later." MouseLeftButtonDown="EditButton_MouseLeftButtonDown" />
                        </Grid>

                    </Grid>
                </StackPanel>

                <StackPanel Grid.Row="2" Margin="0,0,0,20">
                    <TextBlock Text="Guest:" FontWeight="Bold" />
                    <ComboBox x:Name="cmbBuilding" Padding="2,5,0,5" SelectionChanged="cmbBuilding_SelectionChanged" />
                </StackPanel>

                <StackPanel Grid.Row="3" Margin="0,0,0,20" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition  Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Text="Days:" FontWeight="Bold" Margin="0,5,5,0" Grid.Column="0" />
                        <TextBox x:Name="txtDays" Padding="2,5,0,5" PreviewTextInput="NumberOnly_PreviewTextInput" Grid.Column="1" Width="50" />
                    </Grid>
                </StackPanel>
                
                <StackPanel Grid.Row="4" Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,2,0">
                            <TextBlock Text="Check In:" FontWeight="Bold" />
                            <DatePicker x:Name="dtpCheckIn" Padding="2,5,0,5" />
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="2,0,0,0">
                            <TextBlock Text="Check Out:" FontWeight="Bold" />
                            <DatePicker x:Name="dtpCheckOut" Padding="2,5,0,5" />
                        </StackPanel>
                    </Grid>
                </StackPanel>

                <StackPanel Grid.Row="5" Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,2,0">
                            <TextBlock Text="Discount:" FontWeight="Bold" />
                            <TextBox x:Name="txtDiscount" IsEnabled="False" Padding="2,5,0,5" />
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="2,0,0,0">
                            <TextBlock Text="VAT:" FontWeight="Bold" />
                            <TextBox x:Name="txtVAT" IsEnabled="False" Padding="2,5,0,5" />
                        </StackPanel>
                    </Grid>
                </StackPanel>

                <StackPanel Grid.Row="6" Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,2,0">
                            <TextBlock Text="Account Number:" FontWeight="Bold" />
                            <ComboBox x:Name="cmbAccountNumber" Padding="2,5,0,5" />
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="2,0,0,0">
                            <TextBlock Text="Payment Method:" FontWeight="Bold" />
                            <ComboBox x:Name="cmbPaymentMethod" Padding="2,5,0,5" />
                        </StackPanel>
                    </Grid>
                </StackPanel>

                <StackPanel Grid.Row="7" Margin="0,0,0,20">
                    <Grid Margin="1,0,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <Button Content="Cancel" Height="34" Margin="5" Padding="0,5,0,5" Background="Red" Foreground="White" Cursor="Hand" Click="Cancel_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="5" Padding="5">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <Button Content="Save" Height="34" Margin="5" Padding="0,5,0,5" Background="#4ead16" Foreground="White" Cursor="Hand" Click="AddRoomButton_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="5" Padding="5">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Grid>
        </StackPanel>
        
        <Grid x:Name="LoaderOverlay" Background="Black" Opacity="0.5" Visibility="Collapsed">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="150" Height="20" />
                <TextBlock Text="Loading, please wait..." Foreground="White" FontWeight="Bold" Margin="10,5,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
