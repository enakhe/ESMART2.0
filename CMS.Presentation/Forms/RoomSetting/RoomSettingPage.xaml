                                                        <DataTemplate>
                                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                                <Button Width="30" Height="30" ToolTip="Edit Building" Background="#E0E7FF" Cursor="Hand" Tag="{Binding Id}" Click="EditRoomButton_Click">
